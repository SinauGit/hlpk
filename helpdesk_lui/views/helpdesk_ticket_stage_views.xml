<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="helpdesk_ticket_stage_tree" model="ir.ui.view">
        <field name="name">helpdesk.ticket.stage.tree</field>
        <field name="model">helpdesk.ticket.stage</field>
        <field name="arch" type="xml">
            <tree string="Stages">
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="closed" />
                <field name="unattended" />
                <field name="fold" />
            </tree>
        </field>
    </record>

    <record id="helpdesk_ticket_stage_form" model="ir.ui.view">
        <field name="name">helpdesk.ticket.stage.form</field>
        <field name="model">helpdesk.ticket.stage</field>
        <field name="arch" type="xml">
            <form string="Stage">
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Stage Name" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sequence" groups="base.group_no_one" />
                            <field name="active" widget="boolean_toggle" />
                            <field name="fold" />
                        </group>
                        <group>
                            <field name="unattended" />
                            <field name="closed" />
                        </group>
                    </group>
                    <group string="Stage Description">
                        <field name="description" nolabel="1" />
                    </group>
                    <group string="Company">
                        <field
                            name="company_id"
                            options="{'no_create': True}"
                            groups="base.group_multi_company"
                        />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="helpdesk_ticket_stage_search" model="ir.ui.view">
        <field name="name">helpdesk.ticket.stage.search</field>
        <field name="model">helpdesk.ticket.stage</field>
        <field name="arch" type="xml">
            <search string="Ticket Stages">
                <field name="name" />
                <filter
                    string="Unattended"
                    name="unattended"
                    domain="[('unattended', '=', True)]"
                />
                <filter
                    string="Closed"
                    name="closed"
                    domain="[('closed', '=', True)]"
                />
            </search>
        </field>
    </record>
</odoo> 