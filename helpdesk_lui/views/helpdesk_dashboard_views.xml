<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="helpdesk_dashboard_view_kanban" model="ir.ui.view">
        <field name="name">helpdesk.dashboard.kanban</field>
        <field name="model">helpdesk.ticket</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <kanban create="false" class="oe_background_grey">
                <field name="id" />
                <field name="name" />
                <field name="employee_id" />
                <field name="category_id" />
                <field name="unassigned_tickets" />
                <field name="unattended_tickets" />
                <field name="open_tickets" />
                <field name="high_priority_tickets" />
                <field name="assigned_tickets" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_{{ (5 % 8) + 1 }} oe_kanban_card">
                            <div class="row">
                                <div class="col-12">
                                    <h4 class="text-center">Dashboard</h4>
                                </div>
                            </div>
                            <div class="container o_kanban_card_content">
                                <div class="row mt8">
                                    <div class="col-6 text-center">
                                        <a t-attf-href="#action=#{helpdesk_ticket_action}&amp;menu_id=#{helpdesk_ticket_menu}&amp;search_default_unassigned=1">
                                            <span><t t-esc="record.unassigned_tickets.value"/></span>
                                            <br/>
                                            <span>Unassigned Tickets</span>
                                        </a>
                                    </div>
                                    <div class="col-6 text-center">
                                        <a t-attf-href="#action=#{helpdesk_ticket_action}&amp;menu_id=#{helpdesk_ticket_menu}&amp;search_default_unattended=1">
                                            <span><t t-esc="record.unattended_tickets.value"/></span>
                                            <br/>
                                            <span>Unattended Tickets</span>
                                        </a>
                                    </div>
                                </div>
                                <div class="row mt8">
                                    <div class="col-6 text-center">
                                        <a t-attf-href="#action=#{helpdesk_ticket_action}&amp;menu_id=#{helpdesk_ticket_menu}&amp;search_default_open=1">
                                            <span><t t-esc="record.open_tickets.value"/></span>
                                            <br/>
                                            <span>Open Tickets</span>
                                        </a>
                                    </div>
                                    <div class="col-6 text-center">
                                        <a t-attf-href="#action=#{helpdesk_ticket_action}&amp;menu_id=#{helpdesk_ticket_menu}&amp;search_default_high_priority=1">
                                            <span><t t-esc="record.high_priority_tickets.value"/></span>
                                            <br/>
                                            <span>High Priority</span>
                                        </a>
                                    </div>
                                </div>
                                <div class="row mt8 mb8">
                                    <div class="col-12 text-center">
                                        <a t-attf-href="#action=#{helpdesk_ticket_action}&amp;menu_id=#{helpdesk_ticket_menu}&amp;search_default_mytickets=1">
                                            <span><t t-esc="record.assigned_tickets.value"/></span>
                                            <br/>
                                            <span>My Tickets</span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo> 